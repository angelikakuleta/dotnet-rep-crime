@using REP_CRIME01.Crime.Common;

@model REP_CRIME01.CrimeReportWeb.Models.CreateCrimeEventVM;

@{
    ViewData["Title"] = "View";
}

<div class="mt-4">
    <h1 class="mb-4">Report a crime</h1>

    <div class="row">
        <div class="col-md-4">
            <form method="post" asp-action="Report">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="EventDate" class="control-label">Event Date</label>
                    <input asp-for="EventDate" class="form-control" />
                    <span asp-validation-for="EventDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EventType" class="control-label">Event Type</label>
                    <div>
                        <select asp-for="EventType" asp-items="Html.GetEnumSelectList<EventType>()" class="form-control">
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label">Description</label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="City" class="control-label">City</label>
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Street" class="control-label">Street</label>
                    <input asp-for="Street" class="form-control" />
                    <span asp-validation-for="Street" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ReportingPersonEmail" class="control-label">Email</label>
                    <input asp-for="ReportingPersonEmail" class="form-control" />
                    <span asp-validation-for="ReportingPersonEmail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
